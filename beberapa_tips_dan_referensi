--------------TIME&ETC-------------------
detik			        detik
1menit		=  60	        detik
1jam	  	=  3600 	detik
1hari		=  86400	detik
1bulan		=  2592000	detik
1tahun		=  31104000	detik

1K = 1000
1M = 1000000
1B = 1000000000
1T = 1000000000000

1M = 10^3
1K = 10^6
1B = 10^9
1T = 10^12
1GOOGOL = 10^100

